<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightCream"
    android:orientation="vertical"
    tools:context=".LoginFailedActivity" >
    <fragment
        android:id="@+id/menu"
        android:name="es.cylicon.yourcommitment.activity.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:padding="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_failed_please_try_again" />
    <Button
        android:id="@+id/tryToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/try_to_login" />
</LinearLayout>