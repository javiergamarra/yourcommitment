<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightCream"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/proyectsActivity"
        android:name="es.cylicon.yourcommitment.activity.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/proyectName"
                style="@style/tituloTabla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_del_proyecto" />

            <TextView
                android:id="@+id/address"
                style="@style/SubTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mozambique" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/lightBrown"
                android:gravity="center"
                android:padding="15dip"
                android:text="@string/descripci_n_del_proyecto" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="left"
                android:padding="15dip"
                android:text="@string/lorem" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginTop="30dip"
                android:progress="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/terminado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dip"
                    android:text="@string/terminado" />

                <TextView
                    android:id="@+id/recaudado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="@color/lightBrown"
                    android:gravity="center"
                    android:padding="15dip"
                    android:text="@string/recaudado" />
            </LinearLayout>

            <Button
                style="@style/BotonDonar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/donar" />

            <Button
                android:id="@+id/updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dip"
                android:layout_marginTop="15dip"
                android:background="@color/green"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:text="@string/ver_actualizaciones" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>