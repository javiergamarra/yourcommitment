<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity" >

    <fragment
        android:id="@+id/menu"
        android:name="es.cylicon.yourcommitment.activity.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/tituloTabla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/tituloUser" />
    
    <LinearLayout
        style="@style/fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/userNameLabel"
            style="@style/labelFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/userNameLabel" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/userName" />
    </LinearLayout>

    <LinearLayout
        style="@style/fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/userEmailLabel"
            style="@style/labelFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/userEmailLabel"/>

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/userEmail" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
 
        <TextView
            android:id="@+id/userAmount"
            style="@style/labelFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/amountUser" />
        
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="0dip"            
           	android:max="10000"
           	android:progress="50"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        style="@style/fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/userAmountLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donationAmountUser" />
    </LinearLayout>

    <TextView
        style="@style/tituloTabla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/tituloTablaDonaciones" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>